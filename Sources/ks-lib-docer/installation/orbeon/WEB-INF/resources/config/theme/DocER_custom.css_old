	display:block;
	width: 152px;
	height: 60px;
	padding-left:3000px;
	background: transparent url(docER-images/logo_cner.gif) no-repeat;
	}

.tabs {
	background: url(docER-images/tabs_bg.gif) repeat-x;
	overflow: hidden;
	height: 24px;
	text-transform: none;
	font-weight: normal;
	color:#fff;
