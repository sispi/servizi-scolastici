/*
	menu sinistra
	*/ 
	
	#leftcontent * /*IE fix*/ {
	margin: 0;
	padding: 0;
}
#leftcontent /*td colonna sinistra*/ {
	border: none !important;
	padding-left: 10px !important;
	background: #fff !important;
	overflow: hidden;
}
#leftcontent h1 /*titolo menu*/ {
	display: none;/*	font-size: 1.5em !important;
	color: #666 !important;
	margin-bottom: 1em !important;
	margin-left: 12px !important;
	line-height: 1.5em;
*/
}
.tree-sections ul li, li.tree-section {
}
.tree-sections /*ul contenente tutti i menu*/ {
	line-height: 1.5em !important;
	width: 210px !important;
}
.tree-section:first-child {
	display:none;
}
.tree-section  /*li titolo dei submenu*/ {
	font-size: 1em;
	font-weight: normal;
	color: #000 !important;
	display:block !important; /*IE fix*/
	line-height: 20px !important;
	padding: 0.3em !important;
	background-color: #D0CFCF;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
	border-radius: 4px;
	position: relative;
	z-index: 200;
	left:11px;
	width: 180px;
}
ul.tree-items {
	display:block;
	padding: 2em 10px 1em !important;
	text-transform: none !important; /*IE fix*/
	margin-bottom: 22px !important;
	background: url(docER-images/bg_portlet.jpg) transparent no-repeat !important;
	-moz-border-radius: 4px !important;
	-webkit-border-radius: 4px !important;
	border-radius: 4px !important;
	position: relative !important;
	margin-top: -1.7em !important;
	font-size: 90%;
}
.tree-sections:last-child {
	margin-bottom: 0 !important;
}
li.tree-items, li.tree-items-selected /*voce non selezionata submenu (contiene link)*/ {
	display: block;
	padding: 0.3em 1em !important;
	border-bottom: 1px dashed #CCC
}
li.tree-items a {
	color: #666 !important;
}
li.tree-items a, li.tree-items-selected /*li.tree-items = voce non selezionata submenu (contiene link)*/ {
	display: block;
	text-decoration: none !important;
}
li.tree-items:hover /*voce non selezionata submenu (contiene link)*/ {
	background: url(docER-images/menu_bkg_li_hov.png) transparent repeat-x center !important;
}
li.tree-items-selected /*voce selezionata submenu (no link)*/ {
	color: #666 !important;
	background: url(docER-images/sprite.png) repeat-x 0 -1300px !important;
}


