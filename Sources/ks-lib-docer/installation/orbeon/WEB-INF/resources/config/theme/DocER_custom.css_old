	background: #fff;
}

#main {
	padding-bottom: 3em;
	border-bottom: 4px solid #E2E2E2 !important;
}

#banner {
	background: transparent url(docER-images/header.gif) repeat-x !important;
	height: 115px !important;
	color: #fff;
	padding: 0 3em
}
#banner a img {
	/*	background: transparent url(docER-images/logo_bkg.png) top left no-repeat !important;
*/	margin-top: 20px;
