		</dependency>-->
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>${project.parent.artifactId}.businesslogic</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>docer.commons.services</artifactId>
			<version>${project.version}</version>
		</dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>docer.commons.axis2-base</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>docer.services.digitalstamp.sdk</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>digitalstamp.intesiProvider</artifactId>
			<version>${project.version}</version>
		</dependency>

	</dependencies>
	<build>
		<finalName>WSDigitalStamp</finalName>
        		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<packagingExcludes>
						WEB-INF/lib/geronimo-activation_1.1_spec-1.0.2.jar,
						WEB-INF/lib/httpcore-4.0.jar,
						WEB-INF/lib/xalan-2.6.0.jar,
						WEB-INF/lib/log4j-1.2.13.jar,
						WEB-INF/lib/jaxen-1.1.1.jar,
						WEB-INF/lib/commons-logging-1.0.4.jar,
						WEB-INF/lib/commons-io-1.4.jar
					</packagingExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpcore</artifactId>
				<version>4.1.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
